@model Category


@{
    ViewBag.Title = "Edit Category";
    

}

<form enctype="multipart/form-data" asp-controller="Categories" asp-action="Edit" method="post" class="mt-3">
    <input hidden asp-for="Id" />
    <input hidden asp-for="OwnerId" />
    <div class="form-group row">
        <label asp-for="Name" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Name" class="form-control" placeholder="Name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    
    <div class="form-group row">
        <label asp-for="CategoryLevel" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <select asp-for="CategoryLevel" class="custom-select mr-sm-2" asp-items="Html.GetEnumSelectList<CategoryLevel>()"><option value="">Please Select</option></select>
            <span asp-validation-for="CategoryLevel" class="text-danger"></span>
        </div>
    </div>
    

    

    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-success">Update</button>
            <a asp-controller="Categories" asp-action="index" class="btn btn-primary">Cancel</a>
        </div>
    </div>
   

</form>