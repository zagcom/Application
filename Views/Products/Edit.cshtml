@model ProductEditViewModel


@{
    ViewBag.Title = "Edit Product";
    var photoPath = "~/Images/" + (Model.ExistingPhotoPath ?? "placeholder-image.jpg");

}

    <form enctype="multipart/form-data" asp-controller="Products" asp-action="Edit" method="post" class="mt-3">
        <input hidden asp-for="Id" />
        <input hidden asp-for="ExistingPhotoPath" />
        <div class="form-group row">
            <label asp-for="Name" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Name" class="form-control" placeholder="Name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Qty" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Qty" class="form-control" placeholder="Quantity" />
                <span asp-validation-for="Qty" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Unit" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <select asp-for="Unit" class="custom-select mr-sm-2" asp-items="Html.GetEnumSelectList<Unit>()"><option value="">Please Select</option></select>
                <span asp-validation-for="Unit" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="EAN" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="EAN" class="form-control" placeholder="EAN" />
                <span asp-validation-for="EAN" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Photo" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <div class="custom-file">
                    <input multiple asp-for="Photo" class="form-control custom-file-input" />
                    <label class="custom-file-label">Click here to change photo...</label>
                </div>
            </div>
        </div>

        <div class="form-group row col-sm-4 offset-4">
            <img src="@photoPath" class="imageTumbnail" asp-append-version="true" />
        </div>

        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-success">Update</button>
                <a asp-controller="Products" asp-action="index" class="btn btn-primary">Cancel</a>
            </div>
        </div>
        @section Scripts {
            <script>
                $(document).ready(function () {
                    $('.custom-file-input').on("change", function () {
                        var fileName = $(this).val().split("\\").pop();
                        $(this).next('.custom-file-label').html(fileName);
                    });
                });
            </script>
        }

    </form>