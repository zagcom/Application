@model string

@{ 
    ViewBag.Title = "404 Error";
}

<div class="alert alert-danger mt-1 mb-1">
    <h4>404 Not Found Error :</h4>
    <hr />
    <h5>
        Product with Id = @Model cannot be found
    </h5>
</div>
<a asp-action="index" asp-controller="Products" class="btn btn-outline-success" style="width:auto">
    Click here to search all products.
</a>