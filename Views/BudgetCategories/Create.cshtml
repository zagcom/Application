            <span asp-validation-for="Level2CategoryId" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Level3CategoryId" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            @Html.DropDownListFor(m => m.Level3CategoryId, new SelectList(Model.Level3Categories, "Id", "Name"), "", new { @class = "form-control" })
            <span asp-validation-for="Level3CategoryId" class="text-danger"></span>
        </div>
